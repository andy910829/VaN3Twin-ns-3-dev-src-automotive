<routes>
    <!-- 定義路徑，所有車輛使用同一條環路以簡化場景 -->
    <route id="r_main" edges="ne_to_nw nw_to_sw sw_to_se se_to_ne"/>

    <!-- 重新定義車輛類型以符合戰術需求 -->
    <!-- 緊急車輛: 速度較慢 -->
    <vType id="vTypeEmergency" accel="4.0" decel="4.5" emergencyDecel="9.0" sigma="0.5" maxSpeed="18" minGap="2.5" color="1,0,0"/>

    <!-- 攻擊者: 速度與緊急車輛同步，但由C++控制 -->
    <vType id="vTypeAttacker" accel="5.0" decel="5.0" emergencyDecel="9.0" sigma="0.5" maxSpeed="18" minGap="2.5" color="0,0,1"/>
    
    <!-- 受害者/背景車輛: 速度顯著較快，以製造追撞風險 -->
    <vType id="vTypeVictim" accel="3.5" decel="4.0" emergencyDecel="9.0" sigma="0.5" maxSpeed="28" minGap="2.5" tau="1.2" />

    <!-- 其他背景車輛類型，增加場景多樣性 -->
    <vType id="vTypeNormal" accel="3.0" decel="4.0" sigma="0.5" maxSpeed="25" minGap="2.5" />

    <!-- =================================================================== -->
    <!--                      車輛部署 (按 depart 時間排序)                      -->
    <!-- =================================================================== -->

    <!-- ** 核心戰術群組 (Core Tactical Group) ** -->
    <!-- 目標 A (高價值): Lane 0 -->
    <vehicle id="veh0" type="vTypeEmergency" route="r_main" depart="5.0" departLane="0" departPos="100" departSpeed="15"/>

    <!-- 目標 B (低價值): Lane 2, 稍微靠前 -->
    <vehicle id="veh1" type="vTypeEmergency" route="r_main" depart="5.0" departLane="2" departPos="110" departSpeed="15"/>

    <!-- 攻擊者: Lane 1, 位於兩目標後方的"甜蜜點"，距離皆在50m內 -->
    <vehicle id="veh2" type="vTypeAttacker" route="r_main" depart="5.0" departLane="1" departPos="60" departSpeed="15"/>

    <!-- ** 高風險受害車隊 (High-Risk Victim Convoy behind Target A) ** -->
    <!-- 這個車隊速度快，將快速追上 veh0 -->
    <vehicle id="veh3" type="vTypeVictim" route="r_main" depart="5.5" departLane="0" departPos="80" departSpeed="20"/>
    <vehicle id="veh4" type="vTypeVictim" route="r_main" depart="6.0" departLane="0" departPos="60" departSpeed="20"/>
    <vehicle id="veh5" type="vTypeVictim" route="r_main" depart="6.5" departLane="0" departPos="40" departSpeed="22"/>
    <vehicle id="veh6" type="vTypeVictim" route="r_main" depart="7.0" departLane="1" departPos="25" departSpeed="22"/>
    <vehicle id="veh7" type="vTypeVictim" route="r_main" depart="7.5" departLane="0" departPos="10" departSpeed="25"/>
    <vehicle id="veh8" type="vTypeVictim" route="r_main" depart="8.0" departLane="0" departPos="0" departSpeed="25"/>
    <vehicle id="veh9" type="vTypeVictim" route="r_main" depart="8.5" departLane="1" departPos="0" departSpeed="25"/>
    <vehicle id="veh10" type="vTypeVictim" route="r_main" depart="9.0" departLane="0" departPos="-15" departSpeed="28"/>

    <!-- ** 低風險與背景車流 (Low-Risk and Background Traffic) ** -->
    <!-- 稀疏地跟在目標 B 後方，攻擊價值低 -->
    <vehicle id="veh11" type="vTypeNormal" route="r_main" depart="10.0" departLane="2" departPos="20" departSpeed="20"/>
    
    <!-- 其他背景車輛，增加場景真實感 -->
    <vehicle id="veh12" type="vTypeNormal" route="r_main" depart="12.0" departLane="2" departPos="0" departSpeed="25"/>
    <vehicle id="veh13" type="vTypeNormal" route="r_main" depart="15.0" departLane="1" departPos="0" departSpeed="22"/>
    <vehicle id="veh14" type="vTypeNormal" route="r_main" depart="18.0" departLane="0" departPos="0" departSpeed="25"/>
    <vehicle id="veh15" type="vTypeNormal" route="r_main" depart="20.0" departLane="2" departPos="0" departSpeed="23"/>
    <vehicle id="veh16" type="vTypeNormal" route="r_main" depart="22.0" departLane="1" departPos="0" departSpeed="26"/>
    <vehicle id="veh17" type="vTypeNormal" route="r_main" depart="25.0" departLane="0" departPos="0" departSpeed="24"/>

</routes>