  <vType accel="7" decel="7.5" emergencyDecel="10" minGap="1.0" id="Car6" maxSpeed="12.5" laneChangeModel="LC2013" lcStrategic="-1" lcCooperative="-1" lcSpeedGain="0" lcKeepRight="0"/>
  <vType accel="4" decel="7.5" emergencyDecel="10" minGap="1.0" id="Car7" maxSpeed="13.89" laneChangeModel="LC2013" lcStrategic="-1" lcCooperative="-1" lcSpeedGain="0" lcKeepRight="0"/>
  <vType accel="4" decel="7.5" emergencyDecel="10" minGap="1.0" id="Car8" maxSpeed="15.27" laneChangeModel="LC2013" lcStrategic="-1" lcCooperative="-1" lcSpeedGain="0" lcKeepRight="0"/>
  <vType accel="4" decel="7.5" emergencyDecel="10" minGap="1.0" id="Car9" maxSpeed="16.66" laneChangeModel="LC2013" lcStrategic="-1" lcCooperative="-1" lcSpeedGain="0" lcKeepRight="0"/>

  <!-- 核心模擬車輛佈局設計 -->

  <!-- veh1: 緊急車輛1 - 作為主要的緊急事件發送者。設定為Car1，速度最慢。 -->
  <!-- depart="1.0": 最早出發，設定為場景的起始點。 -->
  <!-- departLane="0": 位於最右側車道。 -->
  <vehicle id="veh1" type="Car1" depart="1.0" route="0" departLane="0" />

  <!-- veh7: 緊急車輛2 - 另一輛緊急事件發送者，位於相鄰車道。 -->
  <!-- depart="1.5": 稍晚於veh1出發，但比veh1快一點。 -->
  <!-- departLane="1": 位於中間車道，與veh1大致平行或略微超前。 -->
  <vehicle id="veh7" type="Car2" depart="1.5" route="0" departLane="1" />

  <!-- veh4: 攻擊車輛 - 惡意干擾者。設定為Car3，速度介於緊急車輛和追蹤車輛之間。 -->
  <!-- depart="3.0": 在veh1和veh7出發後，veh4出發。 -->
  <!-- departLane="0": 位於與veh1相同的車道，它會追上veh1並緊隨其後。 -->
  <!-- 這樣veh4就會處於veh1(緊急源)和veh10(接收者)之間，實現干擾。 -->
  <vehicle id="veh4" type="Car3" depart="3.0" route="0" departLane="0" />

  <!-- veh10: 後方追蹤車輛 - 用於觀察煞車行為的目標車輛。設定為Car6，速度最快。 -->
  <!-- depart="10.0": 遠晚於其他核心車輛出發，確保它從後方追上。 -->
  <!-- departLane="0": 位於與veh1和veh4相同的車道，它將首先接近veh4，然後是veh1。 -->
  <vehicle id="veh10" type="Car6" depart="10.0" route="0" departLane="0" />

  <!-- 增加的背景車輛，使交通流更自然，但不影響核心模擬邏輯。 -->
  <vehicle id="bg_veh1" type="Car5" depart="0.0" route="1" departLane="0" />
