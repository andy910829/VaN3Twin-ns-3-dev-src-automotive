<routes>
    <!-- 路線定義：保持原樣，所有車輛都使用 route 0 以便於控制和觀察 -->
    <route id="0" edges="ne_to_nw nw_to_sw sw_to_se se_to_ne"/>

    <!-- 車輛類型定義 (vTypes) -->
    <!-- 為了場景設計，我們重新定義了更具針對性的車輛類型 -->
    
    <!-- 緊急車輛: 中等速度，模擬謹慎行駛或減速狀態 -->
    <vType id="EmergencyV" accel="4.0" decel="7.5" emergencyDecel="10" minGap="1.5" maxSpeed="20" laneChangeModel="LC2013" lcStrategic="0.5" lcCooperative="0.5" />

    <!-- 攻擊者車輛: 性能均衡，用於精確定位 -->
    <vType id="AttackerV" accel="5.0" decel="7.5" emergencyDecel="10" minGap="1.5" maxSpeed="25" laneChangeModel="LC2013" lcStrategic="0.1" lcSpeedGain="0.1" />

    <!-- 激進的追隨者 (高風險受害者): 高速、高加速、極小的安全距離 (minGap)，用於製造追撞風險 -->
    <vType id="AggressiveFollower" accel="6.0" decel="7.0" emergencyDecel="9.5" minGap="0.8" maxSpeed="30" laneChangeModel="LC2013" lcStrategic="1" lcSpeedGain="10" />

    <!-- 普通背景車輛: 正常的安全距離和速度 -->
    <vType id="NormalCar" accel="3.5" decel="7.5" emergencyDecel="10" minGap="2.0" maxSpeed="25" laneChangeModel="LC2013" lcStrategic="0.5" lcCooperative="0.5" />


    <!-- 車輛生成定義 -->
    <!-- 注意：所有車輛均已按照 'depart' 時間嚴格升序排列 -->

    <!-- =================================================================== -->
    <!-- 核心角色登場 (The Main Cast) -->
    <!-- =================================================================== -->
    
    <!-- 緊急車輛 1 (高價值目標): 在最右側車道 (lane 0) 以較慢速度行駛 -->
    <vehicle id="veh0" type="EmergencyV" route="0" depart="5.0" departLane="0" departSpeed="12"/>
    
    <!-- 緊急車輛 2 (低價值目標): 在最左側車道 (lane 2) 以較慢速度行駛 -->
    <vehicle id="veh1" type="EmergencyV" route="0" depart="6.0" departLane="2" departSpeed="12"/>
    
    <!-- 攻擊者: 從中間車道 (lane 1) 出發，速度稍快，以佔據兩台緊急車輛之間的 "攻擊甜蜜點" -->
    <vehicle id="veh2" type="AttackerV" route="0" depart="8.0" departLane="1" departSpeed="14"/>

    <!-- =================================================================== -->
    <!-- 高風險車隊 (跟隨 veh0) - 戰術不對稱性設計 -->
    <!-- 這是場景的關鍵。它們出發速度快，將迅速迫近 veh0 -->
    <!-- =================================================================== -->
    <vehicle id="veh3" type="AggressiveFollower" route="0" depart="10.0" departLane="0" departSpeed="22"/>
    <vehicle id="veh4" type="AggressiveFollower" route="0" depart="10.6" departLane="0" departSpeed="22"/>
    <vehicle id="veh5" type="AggressiveFollower" route="0" depart="11.2" departLane="0" departSpeed="22"/>
    <vehicle id="veh6" type="AggressiveFollower" route="0" depart="11.8" departLane="0" departSpeed="22"/>
    <vehicle id="veh7" type="AggressiveFollower" route="0" depart="12.4" departLane="0" departSpeed="22"/>

    <!-- =================================================================== -->
    <!-- 低風險與背景車流 -->
    <!-- 這些車輛分佈稀疏，或跟隨低價值目標，或作為一般背景交通 -->
    <!-- =================================================================== -->
    
    <!-- 低風險車輛 (跟隨 veh1) -->
    <vehicle id="veh8" type="NormalCar" route="0" depart="15.0" departLane="2" departSpeed="18"/>
    <vehicle id="veh9" type="NormalCar" route="0" depart="18.0" departLane="2" departSpeed="18"/>

    <!-- 其他背景車輛，增加場景的真實感和複雜度 -->
    <vehicle id="veh10" type="NormalCar" route="0" depart="19.0" departLane="1" departSpeed="20"/>
    <vehicle id="veh11" type="NormalCar" route="0" depart="21.0" departLane="0" departSpeed="20"/>
    <vehicle id="veh12" type="NormalCar" route="0" depart="23.0" departLane="1" departSpeed="21"/>
    <vehicle id="veh13" type="NormalCar" route="0" depart="25.0" departLane="2" departSpeed="19"/>
    <vehicle id="veh14" type="NormalCar" route="0" depart="27.0" departLane="0" departSpeed="20"/>
    <vehicle id="veh15" type="NormalCar" route="0" depart="29.0" departLane="1" departSpeed="22"/>

</routes>