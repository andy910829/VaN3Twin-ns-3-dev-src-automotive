  <vehicle id="bg_veh6" type="Car9" depart="7.0" route="0" departLane="0" />
  <vehicle id="bg_veh7" type="Car2" depart="8.0" route="3" departLane="0" />
  <vehicle id="bg_veh8" type="Car6" depart="9.0" route="0" departLane="1" />
  <vehicle id="bg_veh9" type="Car5" depart="11.0" route="0" departLane="0" />
  <vehicle id="bg_veh11" type="Car4" depart="12.0" route="1" departLane="0" />
